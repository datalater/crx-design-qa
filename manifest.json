{
  "manifest_version": 3,
  "name": "Design QA Assistant",
  "description": "Anywhere, any time, QA your designs.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite",
    "debugger"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/messages.js", "content/overlayContentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
